<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_dialog__image"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/fragment_dialog__title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/fragment_dialog__open_in_browser"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginBottom="7dp"
        android:text="@string/open_in_browser"
        android:background="@color/blue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/fragment_dialog__add_in_bookmarks"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginBottom="7dp"
        android:text="@string/add_in_bookmarks"
        android:background="@color/blue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/fragment_dialog__delete_from_bookmarks"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginBottom="7dp"
        android:text="@string/delete_from_bookmarks"
        android:background="@color/blue"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/fragment_dialog__cancel"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginBottom="7dp"
        android:text="@string/cancel"
        android:background="@color/blue"
        android:textColor="@color/white"/>


</LinearLayout>